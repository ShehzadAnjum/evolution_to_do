# Evolution Todo - Environment Variables Template
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# ===========================================
# Better Auth Configuration
# ===========================================
BETTER_AUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
BETTER_AUTH_URL="http://localhost:3000"  # Or your production URL

# ===========================================
# Database (Neon PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# ===========================================
# Google OAuth (optional)
# ===========================================
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-your-google-client-secret"

# ===========================================
# OpenAI API (for AI chatbot)
# ===========================================
OPENAI_API_KEY="sk-proj-your-openai-api-key"

# ===========================================
# App URLs
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:8000"

# ===========================================
# Optional: Vercel OIDC (auto-generated by Vercel CLI)
# ===========================================
# VERCEL_OIDC_TOKEN="auto-generated-by-vercel"
